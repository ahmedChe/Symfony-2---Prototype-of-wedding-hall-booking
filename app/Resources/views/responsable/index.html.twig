{% extends 'base.html.twig' %}

{% block body %}
    <h1>Responsable list</h1>

    <table>
        <thead>
            <tr>
                <th>Cin</th>
                <th>Nomprenom</th>
                <th>Tel</th>
                <th>Email</th>
                <th>Photo</th>
                <th>Login</th>
                <th>Password</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for responsable in responsables %}
            <tr>
                <td><a href="{{ path('responsable_show', { 'id': responsable.cin }) }}">{{ responsable.cin }}</a></td>
                <td>{{ responsable.nomprenom }}</td>
                <td>{{ responsable.tel }}</td>
                <td>{{ responsable.email }}</td>
                <td>{{ responsable.photo }}</td>
                <td>{{ responsable.login }}</td>
                <td>{{ responsable.password }}</td>
                <td>{{ responsable.note }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('responsable_show', { 'id': responsable.cin }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('responsable_edit', { 'id': responsable.cin }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('responsable_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
