{% block body %}
    <h1>Responsable</h1>

    <table>
        <tbody>
            <tr>
                <th>Cin</th>
                <td>{{ responsable.cin }}</td>
            </tr>
            <tr>
                <th>Nomprenom</th>
                <td>{{ responsable.nomprenom }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ responsable.tel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ responsable.email }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ responsable.photo }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ responsable.login }}</td>
            </tr>
            <tr>
