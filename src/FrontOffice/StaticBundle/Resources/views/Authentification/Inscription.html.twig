{% extends '::base.html.twig' %}

{% block body %}

    <link rel="stylesheet" href="{{ asset('bundles/frontofficestatic/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/frontofficestatic/css/form-elements.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/frontofficestatic/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/frontofficestatic/css/StepStyle.css') }}">
    <link rel="shortcut icon" href="{{ asset('bundles/frontofficestatic/ico/favicon.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="144x144"
          href="{{ asset('bundles/frontofficestatic/ico/apple-touch-icon-144-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114"
          href="{{ asset('bundles/frontofficestatic/ico/apple-touch-icon-114-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72"
          href="{{ asset('bundles/frontofficestatic/ico/apple-touch-icon-72-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed"
          href="{{ asset('bundles/frontofficestatic/ico/apple-touch-icon-57-precomposed.png') }}">
    <script src="{{ asset('bundles/frontofficestatic/js/Steps.js') }}" type="text/javascript"></script>
    <section id="Connexion">

        <div class="container">
            <div class="heading wow fadeInUp animated" data-wow-duration="1000ms" data-wow-delay="300ms">
                <div class="row" style="margin-top: 30px;">
                    <div class="text-center col-sm-8 col-sm-offset-2">
                        <h2 style="padding-left: 80px;">Inscription</h2>

                    </div>
                </div>
            </div>

            <link rel="stylesheet"
                  href="{{ asset('//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/css/bootstrap-responsive.min.css') }}"
                  class="cssdeck">
            <div class="top-content">
                <div class="inner-bg">
                    <div class="container">
                        <div class="row" style="margin-top: -120px;">
                            <div class="col-sm-7 col-sm-offset-3" style="background-color: #F06397;padding: 0px;">
                                <div class="modal-body" style="padding: 0px;">
                                    <div class="form-top">
                                        <div class="form-top-left">
                                            <ul class="nav nav-tabs" style="font-weight: bold" id="NavTab">
                                                <li class="active"><a href="#login" data-toggle="tab">Espace Client</a>
                                                </li>
                                                <li><a href="#create" data-toggle="tab">Espace Responsable</a></li>
                                            </ul>
                                        </div>
                                        <div class="form-top-right">
                                            <i class="fa fa-thumbs-up"></i>
                                        </div>
                                    </div>

                                    <div id="myTabContent" class="tab-content">
                                        <div class="tab-pane active in " id="login">

                                            {% if app.session.flashBag.has('echecClient') %}
                                                <div class="alert alert-danger" style="margin: 0px;font-weight:bold">
                                                    {% for msg in app.session.flashBag.get('echecClient') %}
                                                        {{ msg }}
                                                    {% endfor %}
                                                </div>
                                            {% endif %}

                                            <div class="form-bottom">

                                                {{ form_start(form1, {'attr': {'enctype':'multipart/form-data'}}) }}
                                                <div class="form-group">
                                                    {{ form_label(form1.cin,null, {'label': "Carte d'identité Nationale", 'label_attr': {'class': 'foo'}}) }}
                                                    {{ form_widget(form1.cin, {'attr': {'class': 'form-control','placeholder':'CIN..'}}) }}
                                                    <div style="color: #F06397">{{ form_errors(form1.cin) }}</div>
                                                </div>

                                                <div class="form-group">
                                                    {{ form_label(form1.nomprenom,null, {'label': 'Nom & Prénom', 'label_attr': {'class': 'foo'}}) }}
                                                    {{ form_widget(form1.nomprenom, {'attr': {'class': 'form-control','placeholder':'Nom & Prénom..'}}) }}
                                                    <div style="color: #F06397">{{ form_errors(form1.nomprenom) }}</div>
                                                </div>

                                                <div class="form-group">
                                                    {{ form_label(form1.tel,null, {'label': 'Telephone', 'label_attr': {'class': 'foo'}}) }}
                                                    {{ form_widget(form1.tel, {'attr': {'class': 'form-control','placeholder':'Telephone..'}}) }}
                                                    <div style="color: #F06397">{{ form_errors(form1.tel) }}</div>
                                                </div>

                                                <div class="form-group">
                                                    {{ form_label(form1.email,null, {'label': 'EMAIL', 'label_attr': {'class': 'foo'}}) }}
                                                    {{ form_widget(form1.email, {'attr': {'class': 'form-control','placeholder':'EMAIL..'}}) }}
                                                    <div style="color: #F06397">{{ form_errors(form1.email) }}</div>
                                                </div>
                                                <div class="form-group">
                                                    <div style="float: left;margin-right: 40px;">{{ form_label(form1.photo,null, {'label': 'Photo Personel'}) }}</div>
                                                    {{ form_widget(form1.photo,{'attr': {'class': 'form-control'}}) }}
                                                    <div style="color: #F06397">
                                                        {% if app.session.flashBag.has('photoClient') %}
                                                            {% for msg in app.session.flashBag.get('photoClient') %}
                                                                {{ msg }}
                                                            {% endfor %}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_label(form1.login,null, {'label': "Nom d'utilisateur", 'label_attr': {'class': 'foo'}}) }}
                                                    {{ form_widget(form1.login, {'attr': {'class': 'form-control','placeholder':"Nom d'utilisateur.."}}) }}
                                                    <div style="color: #F06397">{{ form_errors(form1.login) }}</div>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_label(form1.password.first,null, {'label': 'Mot de Passe', 'label_attr': {'class': 'foo'}}) }}
                                                    {{ form_widget(form1.password.first, {'attr': {'class': 'form-control','placeholder':'Mot de Passe..'}}) }}
                                                    <div style="color: #F06397">{{ form_errors(form1.password.first) }}</div>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_label(form1.password.second,null, {'label': 'Verification du Mot de passe', 'label_attr': {'class': 'foo'}}) }}
                                                    {{ form_widget(form1.password.second, {'attr': {'class': 'form-control','placeholder':'Mot de Passe..'}}) }}
                                                    <div style="color: #F06397">{{ form_errors(form1.password.second) }}</div>
                                                </div>

                                                <div class="form-group" style="padding-top: 15px;">
                                                    {{ form_widget(form1.Valider,{'attr': {'class': 'btn btn-lg btn-primary'}}) }}
                                                </div>
                                                {{ form_row(form1._token) }}
                                                {{ form_end(form1, {'render_rest': false}) }}


                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="create">

                                            <div class="form-bottom">

                                                <div class="stepwizard col-md-offset-3">
                                                    <div class="stepwizard-row setup-panel" style="font-weight: bold">
                                                        <div class="stepwizard-step">
                                                            <a href="#step-1" type="button"
                                                               class="btn btn-primary btn-circle">1</a>
                                                            <p>Step 1</p>
                                                        </div>
                                                        <div class="stepwizard-step">
                                                            <a href="#step-2" type="button"
                                                               class="btn btn-default btn-circle"
                                                               disabled="disabled">2</a>
                                                            <p>Step 2</p>
                                                        </div>
                                                        <div class="stepwizard-step">
                                                            <a href="#step-3" type="button"
                                                               class="btn btn-default btn-circle"
                                                               disabled="disabled">3</a>
                                                            <p>Step 3</p>
                                                        </div>
                                                        <div class="stepwizard-step">
                                                            <a href="#step-4" type="button"
                                                               class="btn btn-default btn-circle"
                                                               disabled="disabled">4</a>
                                                            <p>Step 4</p>
                                                        </div>
                                                    </div>
                                                </div>

                                                <form role="form" enctype="multipart/form-data" action="{{ path('front_office_Responsable_Registration') }}" method="post">
                                                    <div class="row setup-content" id="step-1">
                                                        <div class="col-md-12">
                                                            <div class="panel panel-default"
                                                                 style="background-color:#FFD0F2;width: 600px;margin-left: 6%;">
                                                                <div class="panel-heading"
                                                                     style="background: #444;background: rgb(204, 42, 108);margin-bottom: 10px;">
                                                                    <h3 class="panel-title"
                                                                        style="font-weight: bold;color: darkgrey">
                                                                        <div style="float: left;margin-right: 30px;">
                                                                            ETAPE 1 :
                                                                        </div>
                                                                        Information Personel
                                                                    </h3>
                                                                </div>
                                                                <div class="panel-body">

                                                                    <div class="form-group">
                                                                        <label class="control-label">Carte d'identité
                                                                            Nationale</label>
                                                                        <input pattern="[0-9]{8}" type="text" name="cin"
                                                                               required="required" class="form-control"
                                                                               placeholder="CIN"/>
                                                                        <label style="float:right;font-size: 0.7em">(CIN
                                                                            doit être valide: 8 chiffres)</label>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label">Nom &
                                                                            Prénom</label>
                                                                        <input pattern="[a-zA-Z]+[ ][a-zA-Z]+"
                                                                               type="text" required="required" name="nompr"
                                                                               class="form-control"
                                                                               placeholder="NOM & PRENOM"/>
                                                                        <label style="float:right;font-size: 0.7em">(Votre
                                                                            nom doit respecter la forme 'NOM
                                                                            PRENOM')</label>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label">Telephone</label>
                                                                        <input pattern="[0-9]{8}" type="text" name="tel"
                                                                               required="required" class="form-control"
                                                                               placeholder="Telephone"/>
                                                                        <label style="float:right;font-size: 0.7em">(Telephone
                                                                            doit être valide: 8 chiffres)</label>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label"
                                                                               style="border: 2px;">Email</label>
                                                                        <input type="email" required="required" name="email"
                                                                               class="form-control"
                                                                               placeholder="Email"/>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label">Photo
                                                                            Personel</label>
                                                                        <input type="file" name="my-image" id="image"
                                                                               accept="image/*;capture=camera"
                                                                               class="form-control"
                                                                        />
                                                                        <label style="float:right;font-size: 0.7em;">(les
                                                                            extensions
                                                                            autorisé{gif,png,bmp,jpeg,jpg})</label>
                                                                    </div>
                                                                    <button class="btn btn-primary nextBtn btn-lg pull-right"
                                                                            type="button"
                                                                            style="width: 250px;clear:both;margin-right: 170px;margin-top:10px;padding:0px;">
                                                                        Next
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    <div class="row setup-content" id="step-2">
                                                        <div class="col-md-12">
                                                            <div class="panel panel-default"
                                                                 style="background-color:#FFD0F2;width: 600px;margin-left: 6%;">
                                                                <div class="panel-heading"
                                                                     style="background: #444;background: rgb(204, 42, 108);margin-bottom: 10px;">
                                                                    <h3 class="panel-title"
                                                                        style="font-weight: bold;color: darkgrey">
                                                                        <div style="float: left;margin-right: 30px;">
                                                                            ETAPE 2 :
                                                                        </div>
                                                                        Information Compte
                                                                    </h3>
                                                                </div>
                                                                <div class="panel-body">

                                                                    <div class="form-group">
                                                                        <label class="control-label">Nom
                                                                            d'utilisateur</label>
                                                                        <input type="text" pattern=".{8,}"
                                                                               placeholder="Confirm Password" name="username"
                                                                               id="username"
                                                                               class="form-control" required>
                                                                        <label style="float:right;font-size: 0.7em">(Le
                                                                            nom d'utilisateur
                                                                            doit se compose au minimum de 8
                                                                            chiffres)</label>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label">Mot de
                                                                            passe</label>
                                                                        <input type="password"
                                                                               placeholder="Password" id="password" name="password"
                                                                               class="form-control" required>
                                                                        <label style="float:right;font-size: 0.7em">(Le
                                                                            mot de passe
                                                                            doit se compose de 8 à 15 chiffres)</label>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label">Verification Mot de
                                                                            passe</label>
                                                                        <input type="password"
                                                                               placeholder="Confirm Password"
                                                                               id="confirm_password"
                                                                               class="form-control"
                                                                               required>
                                                                        <label style="float:right;font-size: 0.7em">(Les
                                                                            mots de passe
                                                                            doit être identique)</label>
                                                                    </div>

                                                                    <button class="btn btn-primary nextBtn btn-lg pull-right"
                                                                            type="button"
                                                                            style="width: 250px;clear:both;margin-right: 170px;margin-top:10px;padding:0px;">
                                                                        Next
                                                                    </button>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                    <div class="row setup-content" id="step-3">
                                                        <div class="col-md-12">
                                                            <div class="panel panel-default"
                                                                 style="background-color:#FFD0F2;width: 600px;margin-left: 6%;">
                                                                <div class="panel-heading"
                                                                     style="background: #444;background: rgb(204, 42, 108);margin-bottom: 10px;">
                                                                    <h3 class="panel-title"
                                                                        style="font-weight: bold;color: darkgrey">
                                                                        <div style="float: left;margin-right: 30px;">
                                                                            ETAPE 3 :
                                                                        </div>
                                                                        Information Salle
                                                                    </h3>
                                                                </div>
                                                                <div class="panel-body">
                                                                    <div class="form-group">
                                                                        <label class="control-label">Nom de la
                                                                            salle</label>
                                                                        <input maxlength="200" type="text"
                                                                               required="required" class="form-control" name="names"
                                                                               placeholder="Nom de la salle"/>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label">Address</label>
                                                                        <textarea rows="4" cols="50"
                                                                                  required="required"
                                                                                  class="form-control" name="adrs"
                                                                                  placeholder="L'adresse de votre salle">
                                                                            </textarea>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label" style="padding-right: 75px;">Type de la
                                                                            salle</label>
                                                                        <select name="type" style="height: 35px;width: 150px;">
                                                                            <option value="Couverte">Couverte</option>
                                                                            <option value="Plein air">Plein air</option>
                                                                        </select>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label">Surface de la
                                                                            salle</label>
                                                                        <input type="text" name="surface"
                                                                               pattern="[0-9]+\.[0-9]+"
                                                                               required="required" class="form-control"
                                                                               placeholder="Surface de la salle"/>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label">Capacite de la
                                                                            salle</label>
                                                                        <input pattern="[0-9]+" type="text" name="capacite"
                                                                               required="required" class="form-control"
                                                                               placeholder="Capacité de la salle"/>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="control-label">Capture de la salle
                                                                        </label>
                                                                        <input type="file" name="image-s" id="image"
                                                                               required="required"
                                                                               accept="image/*;capture=camera"
                                                                               class="form-control"
                                                                        />
                                                                        <label style="float:right;font-size: 0.7em;">(les
                                                                            extensions
                                                                            autorisé{gif,png,bmp,jpeg,jpg})</label>
                                                                    </div>
                                                                    <button class="btn btn-primary nextBtn btn-lg pull-right"
                                                                            type="button"
                                                                            style="width: 250px;clear:both;margin-right: 170px;margin-top:10px;padding:0px;">
                                                                        Next
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row setup-content" id="step-4">
                                                        <div class="col-md-12">
                                                            <div class="panel panel-default"
                                                                 style="background-color:#FFD0F2;width: 600px;margin-left: 6%;">
                                                                <div class="panel-heading"
                                                                     style="background: #444;background: rgb(204, 42, 108);margin-bottom: 10px;">
                                                                    <h3 class="panel-title"
                                                                        style="font-weight: bold;color: darkgrey">
                                                                        <div style="float: left;margin-right: 30px;">
                                                                            ETAPE 4 :
                                                                        </div>
                                                                        Validation du compte
                                                                    </h3>
                                                                </div>
                                                                <div class="panel-body">
                                                                    <div class="alert alert-success">
                                                                        <strong>Merci pour votre participation</strong> Vous devez validez votre compte
                                                                        pour que tu puisse completer les données de votre salle
                                                                    </div>
                                                                    <button class="btn btn-primary nextBtn btn-lg pull-right"
                                                                            type="submit"
                                                                            style="width: 250px;clear:both;margin-right: 170px;margin-top:10px;padding:0px;">
                                                                        Valider
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>


                                            </div>
                                        </div>
                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}